@import "tailwindcss";

@plugin "tailwindcss-animate";
@import "tw-animate-css";

@custom-variant dark (&:is(.dark *));

:root {
  /* Updated color tokens to use pastel blue/purple theme */
  --background: oklch(1 0 0); /* #ffffff */
  --foreground: oklch(0.129 0.042 264.695); /* #374151 */
  --card: oklch(1 0 0); /* #f8fafc */
  --card-foreground: oklch(0.129 0.042 264.695); /* #374151 */
  --popover: oklch(1 0 0); /* #ffffff */
  --popover-foreground: oklch(0.129 0.042 264.695); /* #374151 */
  --primary: oklch(0.208 0.042 265.755); /* #6366f1 - indigo */
  --primary-foreground: oklch(0.984 0.003 247.858); /* #ffffff */
  --secondary: oklch(0.968 0.007 247.896); /* #a855f7 - purple */
  --secondary-foreground: oklch(0.208 0.042 265.755); /* #ffffff */
  --muted: oklch(0.968 0.007 247.896); /* #f8fafc */
  --muted-foreground: oklch(0.554 0.046 257.417); /* #6b7280 */
  --accent: oklch(0.968 0.007 247.896); /* #a855f7 - pastel purple */
  --accent-foreground: oklch(0.208 0.042 265.755); /* #ffffff */
  --destructive: oklch(0.577 0.245 27.325); /* #ea580c */
  --destructive-foreground: oklch(1 0 0); /* #ffffff */
  --border: oklch(0.929 0.013 255.508); /* #d1d5db */
  --input: oklch(0.929 0.013 255.508); /* #ffffff */
  --ring: oklch(0.704 0.04 256.788); /* rgba(99, 102, 241, 0.5) */
  --chart-1: oklch(0.646 0.222 41.116); /* #6366f1 */
  --chart-2: oklch(0.6 0.118 184.704); /* #a855f7 */
  --chart-3: oklch(0.398 0.07 227.392); /* #6b7280 */
  --chart-4: oklch(0.828 0.189 84.429); /* #374151 */
  --chart-5: oklch(0.769 0.188 70.08); /* #1f2937 */
  --radius: 0.625rem;
  --sidebar: oklch(0.984 0.003 247.858); /* #f8fafc */
  --sidebar-foreground: oklch(0.129 0.042 264.695); /* #374151 */
  --sidebar-primary: oklch(0.208 0.042 265.755); /* #6366f1 */
  --sidebar-primary-foreground: oklch(0.984 0.003 247.858); /* #ffffff */
  --sidebar-accent: oklch(0.968 0.007 247.896); /* #a855f7 */
  --sidebar-accent-foreground: oklch(0.208 0.042 265.755); /* #ffffff */
  --sidebar-border: oklch(0.929 0.013 255.508); /* #d1d5db */
  --sidebar-ring: oklch(0.704 0.04 256.788); /* rgba(99, 102, 241, 0.5) */
}

.dark {
  /* Updated dark mode colors to complement the new blue/purple theme */
  --background: oklch(0.129 0.042 264.695); /* #1f2937 */
  --foreground: oklch(0.984 0.003 247.858); /* #f8fafc */
  --card: oklch(0.208 0.042 265.755); /* #374151 */
  --card-foreground: oklch(0.984 0.003 247.858); /* #f8fafc */
  --popover: oklch(0.208 0.042 265.755); /* #374151 */
  --popover-foreground: oklch(0.984 0.003 247.858); /* #f8fafc */
  --primary: oklch(0.929 0.013 255.508); /* #a855f7 - purple */
  --primary-foreground: oklch(0.208 0.042 265.755); /* #1f2937 */
  --secondary: oklch(0.279 0.041 260.031); /* #6366f1 - indigo */
  --secondary-foreground: oklch(0.984 0.003 247.858); /* #ffffff */
  --muted: oklch(0.279 0.041 260.031); /* #374151 */
  --muted-foreground: oklch(0.704 0.04 256.788); /* #6b7280 */
  --accent: oklch(0.279 0.041 260.031); /* #a855f7 - pastel purple */
  --accent-foreground: oklch(0.984 0.003 247.858); /* #1f2937 */
  --destructive: oklch(0.704 0.191 22.216); /* #ea580c */
  --destructive-foreground: oklch(1 0 0); /* #ffffff */
  --border: oklch(1 0 0 / 10%); /* #6b7280 */
  --input: oklch(1 0 0 / 15%); /* #374151 */
  --ring: oklch(0.551 0.027 264.364); /* rgba(168, 85, 247, 0.5) */
  --chart-1: oklch(0.488 0.243 264.376); /* #a855f7 */
  --chart-2: oklch(0.696 0.17 162.48); /* #6366f1 */
  --chart-3: oklch(0.769 0.188 70.08); /* #6b7280 */
  --chart-4: oklch(0.627 0.265 303.9); /* #374151 */
  --chart-5: oklch(0.645 0.246 16.439); /* #1f2937 */
  --sidebar: oklch(0.208 0.042 265.755); /* #374151 */
  --sidebar-foreground: oklch(0.984 0.003 247.858); /* #f8fafc */
  --sidebar-primary: oklch(0.488 0.243 264.376); /* #a855f7 */
  --sidebar-primary-foreground: oklch(0.984 0.003 247.858); /* #1f2937 */
  --sidebar-accent: oklch(0.279 0.041 260.031); /* #6366f1 */
  --sidebar-accent-foreground: oklch(0.984 0.003 247.858); /* #ffffff */
  --sidebar-border: oklch(1 0 0 / 10%); /* #6b7280 */
  --sidebar-ring: oklch(0.551 0.027 264.364); /* rgba(168, 85, 247, 0.5) */
}

@theme inline {
  /* Update font variables to use Google Fonts instead of Geist */
  --font-sans: var(--font-inter);
  --font-mono: var(--font-jetbrains-mono);
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --color-card: var(--card);
  --color-card-foreground: var(--card-foreground);
  --color-popover: var(--popover);
  --color-popover-foreground: var(--popover-foreground);
  --color-primary: var(--primary);
  --color-primary-foreground: var(--primary-foreground);
  --color-secondary: var(--secondary);
  --color-secondary-foreground: var(--secondary-foreground);
  --color-muted: var(--muted);
  --color-muted-foreground: var(--muted-foreground);
  --color-accent: var(--accent);
  --color-accent-foreground: var(--accent-foreground);
  --color-destructive: var(--destructive);
  --color-destructive-foreground: var(--destructive-foreground);
  --color-border: var(--border);
  --color-input: var(--input);
  --color-ring: var(--ring);
  --color-chart-1: var(--chart-1);
  --color-chart-2: var(--chart-2);
  --color-chart-3: var(--chart-3);
  --color-chart-4: var(--chart-4);
  --color-chart-5: var(--chart-5);
  --radius-sm: calc(var(--radius) - 4px);
  --radius-md: calc(var(--radius) - 2px);
  --radius-lg: var(--radius);
  --radius-xl: calc(var(--radius) + 4px);
  --color-sidebar: var(--sidebar);
  --color-sidebar-foreground: var(--sidebar-foreground);
  --color-sidebar-primary: var(--sidebar-primary);
  --color-sidebar-primary-foreground: var(--sidebar-primary-foreground);
  --color-sidebar-accent: var(--sidebar-accent);
  --color-sidebar-accent-foreground: var(--sidebar-accent-foreground);
  --color-sidebar-border: var(--sidebar-border);
  --color-sidebar-ring: var(--sidebar-ring);
}

@layer base {
  * {
    /* Fix invalid border-border utility class to use proper border color */
    @apply border-gray-200 dark:border-gray-700;
  }
  body {
    @apply bg-background text-foreground;
  }
}

@layer base {
  * {
    @apply border-border outline-ring/50;
  }
  body {
    @apply bg-background text-foreground;
  }
}
